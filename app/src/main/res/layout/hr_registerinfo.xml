                android:paddingRight="@dimen/template_item_padding">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_asterisk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address_str33"
                    android:layout_gravity="center_vertical"
                    android:text="Password:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/template_item_size" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="Enter your password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/template_item_size" />
            </LinearLayout>


            <View
                android:id="@+id/chesun_d"
                android:layout_width="match_parent"
                android:layout_height="@dimen/template_divider_height"
                android:layout_below="@id/chesun_str"
                android:background="@color/divider_line_color" />

            <LinearLayout
                android:id="@+id/address_str111"
                android:layout_width="match_parent"
                android:layout_height="@dimen/template_item_height"
                android:layout_below="@+id/chesun_d"
                android:orientation="horizontal"
                android:paddingRight="@dimen/template_item_padding">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_asterisk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address_str111"
                    android:layout_gravity="center_vertical"
                    android:text="Password again:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/template_item_size" />

                <EditText
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="Enter your password again"
                    android:textColor="@color/black"
                    android:textSize="@dimen/template_item_size" />
            </LinearLayout>


            <View
                android:id="@+id/message_d"
                android:layout_width="match_parent"
                android:layout_height="@dimen/template_divider_height"
                android:layout_below="@id/message_str"
                android:background="@color/divider_line_color" />


            <View
                android:id="@+id/shigu_d"
                android:layout_width="match_parent"
