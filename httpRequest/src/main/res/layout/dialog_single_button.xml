<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/shape_bg"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="@dimen/alert_dialog_title_text_size" />

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="内容"
            android:textColor="@android:color/black"
            android:textSize="@dimen/alert_dialog_content_text_size" />
    </ScrollView>

    <View
        android:id="@+id/View1"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="10dp"
        android:background="@color/setting_common_line" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alert_dialog_button_height_size"
        android:background="@drawable/custom_dialog_single_btn_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/alert_dialog_button_text_size" />

</LinearLayout>