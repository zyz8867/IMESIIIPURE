<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/shape_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="@dimen/alert_dialog_title_text_size" />

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="内容"
            android:textColor="@android:color/black"
            android:textSize="@dimen/alert_dialog_content_text_size" />
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="15sp"
        android:background="@color/setting_common_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alert_dialog_button_height_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_dialog_choose_left_selector"
            android:gravity="center"
            android:text="否"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/alert_dialog_button_text_size" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/setting_common_line" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_dialog_choose_right_selector"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/alert_dialog_button_text_size" />
    </LinearLayout>

</LinearLayout>